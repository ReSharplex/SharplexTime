<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SharplexTimeCode.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:views="clr-namespace:SharplexTimeCode.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SharplexTimeCode.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SharplexTimeCode" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#0E0E0E"
        ExtendClientAreaChromeHints="NoChrome" ExtendClientAreaToDecorationsHint="True"
        x:DataType="vm:MainWindowViewModel" BorderThickness="0"
        Height="{Binding Height}" Width="{Binding Width}" CornerRadius="20">
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <ContentControl Content="{Binding SelectedPage}"/>
</Window>